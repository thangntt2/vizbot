{
  "name": "vizbot",
  "version": "0.1.0",
  "description": "Vietnamese chatbot framework",
  "main": "server.js",
  "scripts": {
    "watch:dev": "webpack --colors --progress --config ./webpack.config.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently --kill-others \"npm run watch:dev\"",
    "server": "BLUEBIRD_DEBUG=1 NODE_ENV=development forever --minUptime 1000 --spinSleepTime 1000 --workingDir $(pwd) --watch --watchDirectory build/ src/server.js",
    "lint": "eslint .",
    "clean": "rm -rf build/*",
    "dev": "concurrently --kill-others \"npm run watch\" \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/thangntt2/vizbot.git"
  },
  "keywords": [
    "chatbot",
    "nlp",
    "machine",
    "learning"
  ],
  "author": "thangntt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thangntt2/vizbot/issues"
  },
  "homepage": "https://github.com/thangntt2/vizbot#readme",
  "dependencies": {
    "hapi": "^16.0.1"
  },
  "devDependencies": {
    "eslint": "^3.11.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "json-loader": "^0.5.4",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "concurrently": "^3.1.0",
    "forever": "^0.15.3"
  }
}
